cat <<EOF> /etc/yum.repos.d/PuppetLabs.repo
[PuppetLabs]
name=PuppetLabs for CentOS 6 Repo 
baseurl=http://katello.hq.ltg/pulp/repos/LTG_Federal/Library/custom/Puppet/Puppet_el_6_5_x86_64/
