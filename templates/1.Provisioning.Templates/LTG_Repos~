EOF

cat <<EOF> /etc/yum.repos.d/OpenStackRepo.repo
[OpenStack_Icehouse]
name=OpenStack Icehouse for CentOS 6 Repo 
baseurl=http://katello.hq.ltg/pulp/repos/LTG_Federal/Library/custom/OpenStack_IceHouse/openstack-icehouse_epel-6/
